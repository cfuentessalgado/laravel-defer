{
    "name": "cfuentessalgado/laravel-defer",
    "description": "Implementation of deferable callbacks for Laravel 10 and 11",
    "type": "library",
    "stability": "stable",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "CFS\\LaravelDefer\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "authors": [
        {
            "name": "Cristian Fuentes Salgado",
            "email": "cfuentess2010@gmail.com"
        }
    ],
    "require": {
        "illuminate/http": "^10.0|^11.0",
        "illuminate/routing": "^10.0|^11.0"
    },
    "require-dev": {
        "laravel/pint": "^1.13",
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.0|^9.0"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "format": "pint"
    }
}
